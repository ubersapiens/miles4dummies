<div class="container">
  <div class="row">
    <div class="jumbotron">
       <div class="container">
          <h1>List of Travellers</h1>
       </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>
    <table>
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @travellers.each do |traveller| %>
          <tr>
            <td><%= traveller.first_name %></td>
            <td><%= traveller.last_name %></td>
            <td><%= traveller.email %></td>
            <td><%= link_to 'Show', traveller %></td>
            <td><%= link_to 'Edit', edit_traveller_path(traveller) %></td>
            <td><%= link_to 'Destroy', traveller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Traveller', new_traveller_path %>
    </div>
  </div>
</div>