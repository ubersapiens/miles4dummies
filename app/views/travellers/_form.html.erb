<div class="container">
  <div class="row">
    <%= form_for(@traveller) do |f| %>
      <% if @traveller.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@traveller.errors.count, "error") %> prohibited this traveller from being saved:</h2>

          <ul>
          <% @traveller.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, style: "width:100%;" %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, style: "width:100%;" %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email, style: "width:100%;" %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :phone %><br>
        <%= f.text_field :phone, style: "width:100%;" %>
      </div>
    </div>
    <hr>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :flying_from, "Flying from (please specify city and country)" %><br>
        <%= f.text_field :flying_from, style: "width:100%;" %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :flying_to, "Flying to (please specify city and country)" %><br>
        <%= f.text_field :flying_to, style: "width:100%;" %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
      <%= f.label :departure_date %><br>
      <%= f.date_select :departure_date %>
    </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :return_date %><br>
        <%= f.date_select :return_date %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :request_type %><br>
        <%= f.select :request_type, ['Flight Award Booking - First Class', 'Flight Award Booking - Business Class', 'Flight Award Booking - Premium Economy', 'Flight Award Booking - Economy Class', 'Update Current Flight', 'Hotel Booking', 'Revenue Flight/Airfare Research', 'Other (please specify in Comments)']%>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :flexible, "Are your dates flexible (check if yes)?" %><br>
        <%= f.check_box :flexible %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :mileage_program %><br>
        <%= f.select :request_type, ['Aeromexico Club Premier', 'Air Canada Aeroplan', 'Alaska Airlines Mileage Program', 'Alitalia MilleMiglia', 'America Airlines AAdvantage', 'American Express Membership Rewards', 'Asiana Club', 'Austrian Airlines Miles & More', 'Avianca LifeMiles', 'Barclaycard Arrival Miles', 'British Airways Avios', 'Brussels Airlines Miles & More', 'Chase Ultimate Rewards', 'Citi ThankYou Rewards', 'El Al Matmid', 'Emirates Skywards', 'Etihad Guest', 'Hawaiian Airlines Hawaiian Miles', 'Iberia Plus', 'Jet Airways JetPrivilege', 'JetBlue TrueBlue', 'KLM Flying Blue', 'Korean SKYPASS', 'LAN LANPASS', 'Lufthansa Miles & More', 'Qantas Frequent Flyer', 'Qatar Airways Privilege Club', 'Singapore Airlines KrisFlyer', 'South African Airways Voyager', 'Southwest Airlines Rapid Rewards', 'Starwood Preferred Guest', 'Swiss Miles & More', 'TAM Fidelidade', 'TAP Portugal Miles & More', 'THAI Royal Orchid Plus', 'Turkish Airlines Miles&Smiles', 'United Airlines Mileage Plus', 'Virgin America Elevate', 'Virgin Atlantic Flying Club', 'Other (please specify in Comments)']%>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field">
        <%= f.label :miles_balance, "Miles balance (ie 120000)" %><br>
        <%= f.number_field :miles_balance, style: "width:100%;" %>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="field">
        <%= f.label :comments, "Comments and additional details (the more you tell us, the better we can advise you)" %><br>
        <%= f.text_area :comments, cols: "100", rows: "10", style: "width:100%;"%>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>
  </div>
</div>